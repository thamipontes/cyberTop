--CRIAR TABELA ALUNO

CREATE TABLE public.aluno (
	id serial NOT NULL,
	nome varchar NOT NULL,
	cpf varchar NOT NULL,
	data_nascimento date NOT NULL,
	telefone varchar NOT NULL,
	endereco varchar NOT NULL,
	genero bpchar(1) NOT NULL,
	cep varchar NOT NULL,
	cor_raca varchar NOT NULL,
	id_turma int4 NOT NULL,
	email varchar NOT NULL,
	curso varchar NOT NULL,
	CONSTRAINT pk_id_aluno PRIMARY KEY (id)
);


--CRIAR TABELA TURMA

CREATE TABLE public.turma (
	id serial NOT NULL,
	nome varchar NOT NULL,
	horario varchar NOT NULL,
	tipo bool NOT NULL,
	periodo bool NULL,
	vagas int4 NOT NULL DEFAULT 60,
	universidade varchar NULL,
	CONSTRAINT pk_id_turma PRIMARY KEY (id)
);


--CRIAR TABELA UNIVERSIDADE

CREATE TABLE public.universidade (
	id serial NOT NULL,
	nome varchar NOT NULL,
	estado varchar NOT NULL,
	campus varchar NOT NULL,
	CONSTRAINT pk_id_universidade PRIMARY KEY (id)
);


--CRIAR TABELA PROFESSOR

CREATE TABLE public.professor (
	id serial NOT NULL,
	nome varchar NOT NULL,
	cpf varchar NOT NULL,
	data_nascimento date NOT NULL,
	telefone varchar NOT NULL,
	endereco varchar NOT NULL,
	genero bpchar(1) NOT NULL,
	materia varchar NOT NULL,
	turma varchar NOT NULL,
	CONSTRAINT pk_id_professor PRIMARY KEY (id)
);


--CRIAR TABELA DIRETOR

CREATE TABLE public.diretor (
	id serial NOT NULL,
	login varchar NOT NULL,
	senha varchar NOT NULL,
	CONSTRAINT pk_id_diretor PRIMARY KEY (id)
);


--CRIAR RELACIONAMENTO DE CHAVE ESTRANGEIRA ENTRE ALUNO E TURMA

ALTER TABLE public.aluno ADD CONSTRAINT aluno_fk FOREIGN KEY (id_turma) REFERENCES public.turma(id);


--INSERIR LOGIN E SENHA NA TABELA DIRETOR

INSERT INTO public.diretor (login,senha)
	VALUES ('maria','maria');

